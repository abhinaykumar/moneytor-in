<div class="tab-pane fade <%= show %> <%= active %>" id=<%= "nav-#{asset_class.internal_name}" %> role="tabpanel" aria-labelledby=<%= "nav-#{asset_class.internal_name}-tab" %>>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Date of Investment</th>
                    <th>Current Market Price</th>
                    <th>Buy Price</th>
                    <th>Qty.</th>
                    <th>Investment Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% asset[:items].each do |cryptocurrency| %>
                <tr>
                    <td><%= cryptocurrency.listed_cryptocurrency.name %></td>
                    <td><%= cryptocurrency.investment_date %></td>
                    <td><%= cryptocurrency.listed_cryptocurrency.current_market_price&.round(2) %></td>
                    <td><%= cryptocurrency.at_price&.round(2) %></td>
                    <td><%= cryptocurrency.quantity %></td>
                    <td><%= cryptocurrency.investment_amount&.round(2) %></td>
                    <td>
                        <%= link_to edit_cryptocurrency_path(cryptocurrency), class: 'nounderline', data: { toggle: 'tooltip', placement: 'bottom' }, title: 'Edit' do %>
                        <i class="far fa-edit" style="color: Dodgerblue;"></i>
                        <% end %>
                        <b>|</b>
                        <%= link_to cryptocurrency, method: :delete, data: { confirm: 'Are you sure?', toggle: 'tooltip', placement: 'bottom' }, title: 'Delete' do %>
                        <span style="color: Tomato;">
                            <i class="fas fa-trash-alt danger"></i>
                        </span>
                        <% end %>
                    </td>
                </tr>
                <% end %>
                <tr>
                    <td colspan="5"><b>Total Investment:</b></td>
                    <td><%= total&.round(2) %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
