<div class="tab-pane fade <%= show %> <%= active %>" id=<%= "nav-#{asset_class.internal_name}" %> role="tabpanel" aria-labelledby=<%= "nav-#{asset_class.internal_name}-tab" %>>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Date of Investment</th>
                    <th>At Nav</th>
                    <th>No. of Units</th>
                    <th>Investment Amount</th>
                </tr>
            </thead>
            <tbody>
                <% asset[:items].each do |mutual_fund| %>
                <tr>
                    <td><%= mutual_fund.name %></td>
                    <td><%= mutual_fund.date_of_investment %></td>
                    <td><%= mutual_fund.at_nav %></td>
                    <td><%= mutual_fund.units&.round(2) %></td>
                    <td><%= mutual_fund.investment_amount&.round(2) %></td>
                </tr>
                <% end %>
                <tr>
                    <td colspan="4"><b>Total Investment:</b></td>
                    <td><%= total&.round(2) %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
