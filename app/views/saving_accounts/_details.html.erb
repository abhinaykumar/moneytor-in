<div class="tab-pane fade <%= show %> <%= active %>" id=<%= "nav-#{asset_class.internal_name}" %> role="tabpanel" aria-labelledby=<%= "nav-#{asset_class.internal_name}-tab" %>>
    <table class="table table-striped table-bordered table-hover" cellspacing="0">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Rate of Interest</th>
                <th>Branch</th>
                <th>Amount Saved</th>
            </tr>
        </thead>
        <tbody>
            <% asset[:items].each do |saving_account| %>
            <tr>
                <td><%= saving_account.listed_bank.name %></td>
                <td><%= "#{saving_account.rate_of_interest&.round(2)} %" %></td>
                <td><%= saving_account.branch_name %></td>
                <td><%= saving_account.amount_saved&.round(2) %></td>
            </tr>
            <% end %>
            <tr>
                <td colspan="3"><b>Total Savings:</b></td>
                <td><%= total&.round(2) %></td>
            </tr>
        </tbody>
    </table>
</div>
